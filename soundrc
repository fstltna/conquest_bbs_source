# Sound definitions
#
# $Id$
#

# only one of these.
soundconf {
  samplerate   44100
  stereo       "yes"
  fxchannels   16
  chunksize    512        # low latency
}

##
## The music definitions are stored in a seperate file with the
## musicpak. 
##


# general effects
#
#################

effect {
  name         "doomsday-beam"  
  filename     "TOS-doombeam"

  volume       70
  fadeinms     0
  fadeoutms    0
  loops        1
  limit        1
  delayms      1000
}

